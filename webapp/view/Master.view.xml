<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.com.xsOdata_tutorial.controller.Master"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="MASTER VIEW">
				<content>
					<!--<List type="Active" items="{path: '/CUSTOMERS'}" id="table_master">-->
						
					<!--</List>-->
					
					<Table id="table_master" items="{path : '/CUSTOMERS'}" growing="true" itemPress="onSelectT">
						<columns>
							<Column>
								<Text text="ID"/>
							</Column>
							<Column>
								<Text text="LifeSpend"/>
							</Column>
							<Column>
								<Text text="NewSpend"/>
							</Column>
							<Column>
								<Text text="Income"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem press="onSelect" type="Active">
								<cells>
									<Text text="{CUSTOMER}"/>
									<Text text="{LIFESPEND}"/>
									<Text text="{NEWSPEND}"/>
									<Text text="{INCOME}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button type="Accept" text="Chart" press="handleChart"/>
						<Button type="Reject" text="Reject"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>